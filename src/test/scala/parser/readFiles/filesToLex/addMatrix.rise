matrixaddition=\N:Nat=>\matA->\matB->
  mapGlobal 1 (\row->mapLocal 0 (
    \elem->addV (fst elem) (snd elem))
      (zip(fst row) (snd row)))
    (zip matA matB)
matrixaddition::N:Nat=>N.N.V->N.N.V->N.N.V
V:=4xF32
addV::V->V->V
foreign addV(a,b){
  float4 res;
  res.xyz = a.xyz + b.xyz;
  return res;
}